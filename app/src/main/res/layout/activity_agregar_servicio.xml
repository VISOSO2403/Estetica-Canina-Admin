<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".AgregarServicioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/scrollView"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25dp"
                android:text="Agregar Servicio" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                style="@style/AppTheme.CardView"
                android:layout_below="@+id/title"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:id="@+id/linearLayoutCardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contenedor"
                        android:background="@color/whiterect"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txtnom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_vertical"
                                android:text="Nombre del servicio"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <EditText
                                android:id="@+id/etxtnom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/stylo_border_edittex"
                                android:hint="Escribe el nombre del servicio"
                                android:textColor="@color/morado" />

                            <TextView
                                android:id="@+id/txttel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:text="DescripciÃ³n"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <EditText
                                android:id="@+id/etxtdesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/stylo_border_edittex"
                                android:hint="Escribe que es lo que se hace en ese servicio"
                                android:textColor="@color/morado" />

                            <TextView
                                android:id="@+id/txtcosto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_vertical"
                                android:text="Costo del servicio"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <EditText
                                android:id="@+id/etxtcosto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/stylo_border_edittex"
                                android:hint="Escribe el nombre del servicio"
                                android:textColor="@color/morado" />



                            <TextView
                                android:id="@+id/txtimag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical"
                                android:text="Subir imagen del servicio"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/imgservicio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />

                            <LinearLayout
                                android:id="@+id/contenedor5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/btnselectimagen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:backgroundTint="@color/morado"
                                    android:text="Seleccionar archivo"
                                    app:cornerRadius="12dp" />
                                <Button
                                    android:id="@+id/btneliminarimg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    style="?attr/materialButtonOutlinedStyle"
                                    app:strokeColor="@color/morado"
                                    app:cornerRadius="24dp"
                                    android:textColor="@color/morado"
                                    android:text="Eliminar" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/contenedor"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:gravity="bottom"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btnagregar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="@color/morado"
                            app:cornerRadius="24dp"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btncancelar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_marginHorizontal="5dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:strokeColor="@color/morado"
                            app:cornerRadius="24dp"
                            android:text="Cancelar"
                            android:textColor="@color/morado"
                            android:textSize="12dp" />
                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>